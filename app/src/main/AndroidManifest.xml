<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.softeng.jobcosting.jobcostingapp">

    <application
        android:name=".Database.GlobalDatabase"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".UserInterface.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UserInterface.ManualCalculatorActivity"
            android:label="@string/title_activity_calculation" />
        <activity
            android:name=".UserInterface.SummaryActivity"
            android:label="@string/title_activity_summary"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UserInterface.AddOrderActivity"
            android:label="@string/title_activity_add_order"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".UserInterface.EditOrderActivity"
            android:label="@string/title_activity_edit_order"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".UserInterface.overallSummary"
            android:label="@string/title_activity_overall_summary"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
